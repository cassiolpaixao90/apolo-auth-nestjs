	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
            "request": "launch",
            "restart": true,
            "name": "apolo:dev",
            "runtimeArgs": ["--nolazy", "-r", "tsconfig-paths/register", "-r", "ts-node/register"],
            "args": ["${workspaceFolder}/src/main.ts"],
            "autoAttachChildProcesses": true,
            "protocol": "inspector",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "trace": true
        }
	]
}
